varnish:
    pkg:
        - installed
    service.running:
        - enable: true
        - reload: true
        - require:
            - service: nginx
            - pkg: varnish
        - watch:
            - file: /etc/init.d/varnish
            - file: /etc/varnish/default.vcl

/etc/init.d/varnish:
    file.comment:
        # the last line prevents proper error-exits on config fail
        - regex: "^exit 0$"
        - require:
            - pkg: varnish

varnish-restart:
    service.running:
        - name: varnish
        - enable: true
        - reload: false
        - watch:
            - pkg: varnish
            - file: /etc/default/varnish

/etc/default/varnishncsa:
    file.managed:
      - source: salt://http/varnish/etc-default-varnishncsa
      - require:
          - pkg: varnish

varnishncsa:
    service.running:
      - enable: true
      - watch:
          - pkg: varnish
          - file: /etc/default/varnishncsa

/etc/logrotate.d/varnish:
    file.managed:
      - source: salt://http/varnish/logrotate
      - require:
          - pkg: varnish

/etc/init.d/varnishncsa-timing:
    file.managed:
      - source: salt://http/varnish/varnishncsa-timing
      - mode: 755


varnishncsa-timing:
    service.running:
      - enable: true
      - watch:
          - pkg: varnish
          - file: /etc/init.d/varnishncsa-timing
